        <option value="Drama">250-500</option>
        <option value="Komedie">> 500</option>
    </select>
        </form>

        <form>
            <p>Sorteren op</p>
            <select name="sorteren" class="dropdown">
        <option value="Actie">Populair</option>
        <option value="Drama">A-Z</option>
        <option value="Komedie">Z-A</option>
        <option value="Horror">Recent</option>
    </select>
        </form>

        <input type="submit" value="Zoeken">

    </section>
