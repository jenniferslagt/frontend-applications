<section id="filter">
        <form>
                    <p>Taalgebruik</p>
            <select name="genre" class="dropdown">
        <option value="Actie">Alle</option>
        <option value="Drama">12+</option>
        <option value="Komedie">16+</option>
        <option value="Horror">18+</option>
    </select>
        </form>

        <form>
            <p>Sfeer</p>
            <select name="sfeer" class="dropdown">
        <option value="Verward">Verward</option>
        <option value="Somber">Somber</option>
        <option value="Vrolijk">Vrolijk</option>
        <option value="Choatisch">Choatisch</option>
    </select>
        </form>

        <form>
            <p>Aantal woorden</p>
